<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <%include ../static/partials/navbar.ejs%>
     <main class="container">
        <div class="jumbotron">
            <img src="../images/logo.png" width="30" height="30">
            <h1 class="display-3">The Coin Life</h1>
            <p class="lead"> An exciting new way to buy & sell coins online!</p>
            <% if(currentUser) { %>
            <a href="/users/sign_out" class="btn btn-primary btn-sml">Sign Out</a>
            <%} else {%>
            <a href="/users/sign_up" class="btn btn-primary btn-sml">Sign up</a>
            <a href="/users/sign_in"class="btn btn-primary btn-sml">Login</a>
            <% }%>
     </div>
       <h1 class="title1">Products</h1>
       <% if(currentUser) {%>
        <a href="/products/new" class="btn btn-primary">New Product</a>
        <% } %>
        <ul class="list-group">
        <% products.forEach((product) => { %>
            <li class="list-group-item">
              <a href="/products/<%product.id%>" <%= product.name %> </a>
                <a href="/products/<%= product.id %>/edit" class="btn btn-warning">Edit</a>  
                <form style="display:initial" action="/products/<%= product.id %>/destroy" method="post">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
          <% }) %>
           </ul>
     </main>
     <%include ../static/partials/baseScripts.ejs %>
  </body>
</html> 
