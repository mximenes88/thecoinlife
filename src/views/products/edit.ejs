<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <div class="editProduct">

        <h1>Edit Product</h1>

        <form action="/products/<%= product.id %>/update" method="post">
          <div class="form-group">
            <label for="title">Product Name</label>
            <input value="<%= product.name %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Name">
          </div>
          <div class="form-group">
            <label for="body">Product Description</label>
            <textarea rows="4" class="form-control" name="body" placeholder="Enter Description"><%= product.description %></textarea>
          </div>
          <div class="form-group">
              <label for="body">Product Price</label>
              <textarea rows="4" class="form-control" name="body" placeholder="Enter Price"><%= product.price %></textarea>
            </div>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>